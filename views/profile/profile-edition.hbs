<h2>Hey! Would you like to change something?</h2>

<div class="d-flex justify-content-center">
        <form action="/profile/{{user._id}}/profile-edition" method="POST" enctype="multipart/form-data">
                <div class="form-row">
                        <label for="userImage">Profile photo</label>
                        <input type="file" name="userImage" class="form-control">
                        <br>
                </div>
                <div class="form-row">
                        <label for="username">Username</label>
                        <input type="text" name="username" class="form-control" value="{{user.username}}"/>
                        <br>
                </div>
                <div class="form-row">
                        <label for="email">Email</label>
                        <input type="text" name="email" class="form-control" value="{{user.email}}"/>
                        <br>
                </div>
                <div class="form-row">
                        {{!-- NEED TO SHOW THE REAL PASSWORD NOT THE ENCRYTED ONE --}}
                        {{!-- <label for="password">Password</label>
                        <input type="text" name="password" value="{{user.password}}"/>
                        <br> --}}
                </div>
                <div class="form-row">
                        <label for="fullName">Full Name</label>
                        <input type="text" name="fullName" class="form-control" autocomplete="off">
                        <br>
                </div>
                <div class="form-row">
                        <label for="dateOfBirth">Date of Birth</label>
                        <input type="text" name="dateOfiirth" class="form-control"  autocomplete="off">
                        <br>
                </div>
                <div class="form-row">
                        <label for="sex">Sex</label>
                        <select name="sex" class="form-control" >
                                <option value="Female">Female</option>
                                <option value="Male">Male</option>
                        </select>
                        <br>
                </div>   
                <div class="form-row">
                        <label for="address">Address</label>
                        <input type="text" name="address" class="form-control" autocomplete="off">
                        <br>
                </div> 
                <div class="form-row">
                        <label for="phone">Phone</label>
                        <input type="text" name="phone" class="form-control" autocomplete="off">
                        <br>
                </div> 
                <div class="form-row">
                        <label for="job">Job</label>
                        <input type="text" name="job" class="form-control" autocomplete="off">
                        <br>
                </div>
                <div class="form-row">
                        <label for="familyStructure">Family structure</label>
                        <input type="text" name="familyStructure" class="form-control"  autocomplete="off">
                        <br>
                </div>
                <div class="form-row">
                        <label for="comments">Comments</label>
                        <input type="text" name="comments"  class="form-control"autocomplete="off">
                        <br>
                </div>
                        <button type="submit" class="btn btn-success">Save changes</button>

        </form>
</div>